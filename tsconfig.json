{
  "extends": "astro/tsconfig/recommended", // CHANGE THIS LINE from 'base' to 'recommended'
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
