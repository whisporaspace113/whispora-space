---
// This is your Header.astro file.
// Assuming your navigation links are simple and hardcoded for now.
// We can make this dynamic later!
const { lang } = Astro.params; // Get the current language from the URL
---
<header class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-4 shadow-lg">
  <div class="container-custom flex justify-between items-center">
    <a href={`/${lang}/`} class="text-2xl font-extrabold hover:text-yellow-300 transition-colors">
      Whispora.space
    </a>
    <nav>
      <ul class="flex space-x-6">
        <li>
          <a href={`/${lang}/stories`} class="text-lg hover:text-yellow-300 transition-colors">Stories</a>
        </li>
        <li>
          <a href={`/${lang}/songs`} class="text-lg hover:text-yellow-300 transition-colors">Songs</a>
        </li>
        <li>
          <a href={`/${lang}/learn`} class="text-lg hover:text-yellow-300 transition-colors">Learn</a>
        </li>
        </ul>
    </nav>
  </div>
</header>
