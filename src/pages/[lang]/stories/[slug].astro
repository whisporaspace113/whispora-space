---
import MainLayout from '../../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const stories = await getCollection('stories');
  return stories.map((story) => ({
    params: { lang: story.id.split('/')[0], slug: story.slug },
    props: { story },
  }));
}

const { story } = Astro.props;
const { Content } = await story.render();
---

<MainLayout title={story.data.title + " - Whispora.space"} description={story.data.description}>
  <article class="container-custom py-16">
    <header class="text-center mb-10">
      {story.data.image && (
        <img
          src={story.data.image}
          alt={story.data.title}
          class="w-full max-h-96 object-cover rounded-lg shadow-md mb-6 mx-auto"
        />
      )}
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 mb-4">{story.data.title}</h1>
      <p class="text-lg text-gray-600 italic">
        {story.data.description}
        {story.data.author && <span class="block mt-2 not-italic">By {story.data.author}</span>}
      </p>
    </header>

    <div class="prose prose-lg mx-auto text-gray-700 leading-relaxed space-y-4 md:prose-xl">
      <Content /> {/* This renders your Markdown content */}
    </div>

    <div class="text-center mt-12">
      <a href={`/${Astro.params.lang}/stories`} class="inline-block bg-blue-600 text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-blue-700 transition-colors">
        &larr; Back to All Stories
      </a>
    </div>
  </article>
</MainLayout>
