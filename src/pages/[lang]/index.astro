---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import StoryCard from '../../components/cards/StoryCard.astro';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    // Add other languages as needed
    // { params: { lang: 'es' } },
    // { params: { lang: 'fr' } },
  ];
}

const { lang } = Astro.params;

// Get the latest 3 stories for the homepage
const allStories = await getCollection('stories', ({ id }) =>
  id.startsWith(`${lang}/`)
);
const latestStories = allStories.sort((a, b) => {
  // Assuming a 'date' field in frontmatter for sorting. If not, adjust or remove.
  const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA;
}).slice(0, 3);
---

<MainLayout title="Whispora.space - Magical Stories" description="Engaging children's stories, songs, and learning activities for young minds.">
  <section class="relative bg-gradient-to-br from-blue-300 to-purple-400 text-white py-20 px-4 md:px-0 text-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="bg-stars absolute inset-0 opacity-20"></div> {/* Placeholder for star background */}
    </div>
    <div class="container-custom relative z-10">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 leading-tight">
        Welcome to Whispora.space
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
        Where every story is a new adventure, and imagination takes flight!
      </p>
      <a href={`/${lang}/stories`} class="inline-block bg-yellow-400 text-purple-700 px-8 py-3 rounded-full text-lg font-bold hover:bg-yellow-300 transition-colors shadow-lg">
        Explore Stories &rarr;
      </a>
    </div>
  </section>

  <section class="container-custom py-16">
    <h2 class="text-4xl font-extrabold text-center text-gray-800 mb-10">Latest Magical Adventures</h2>
    {latestStories.length === 0 ? (
      <p class="text-center text-gray-600">No stories found in this language yet. Check back soon!</p>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestStories.map((story) => (
          <StoryCard story={story} lang={lang} />
        ))}
      </div>
    )}
    <div class="text-center mt-10">
      <a href={`/${lang}/stories`} class="inline-block bg-blue-600 text-white px-6 py-3 rounded-full text-md font-semibold hover:bg-blue-700 transition-colors">
        View All Stories
      </a>
    </div>
  </section>

  {/* Placeholder for other sections */}
  <section class="container-custom py-16 text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">More Magic Awaits!</h2>
    <p class="text-lg text-gray-700 mb-8">
      Explore enchanting songs, fun learning activities, and discover the history of our magical realm.
    </p>
    <div class="flex flex-wrap justify-center gap-6">
      <a href={`/${lang}/songs`} class="bg-green-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-green-600 transition-colors">Songs</a>
      <a href={`/${lang}/learn`} class="bg-orange-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-orange-600 transition-colors">Learn</a>
      <a href={`/${lang}/gallery`} class="bg-pink-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-pink-600 transition-colors">Gallery</a>
    </div>
  </section>

</MainLayout>
